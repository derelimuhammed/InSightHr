@using MVC_ONION_PROJECT.PRESENTATION.IDENTITY.Vms;
@model ForgotPasswordViewModel
@{
    Layout = "_Layout";
}

<div class="main-wrapper">
    <div class="account-content">
        <div class="container">

            <div class="account-logo">
                <a href="admin-dashboard.html"><img src="/assets/img/InSight_Logo.png" alt="InsightHR"></a>
            </div>

            <div class="account-box">
                <div class="account-wrapper">
                    <h3 class="account-title">Şifremi Unuttum</h3>
                    <p class="account-subtitle">Şifre sıfırlama bağlantısı almak için e-postanızı girin.</p>

                    <form method="post" asp-action="ForgotPassword">
                        <div class="input-block mb-4">
                            <label asp-for="Email" class="control-label"></label>
                            <input asp-for="Email" class="form-control" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="input-block mb-4 text-center">
                            <button class="btn btn-primary account-btn" type="submit">Şifreyi yenile</button>
                        </div>
                        <div class="account-footer">
                           <a asp-action="Login">Şifrenizi Hatırlanız mı?</a>
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>

