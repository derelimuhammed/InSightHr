@using MVC_ONION_PROJECT.PRESENTATION.IDENTITY.Areas.Employee.Models.EmployeeAdvanceVms;
@model EmployeeAdvanceDetailVm;
@{
    Layout = "_Layout";
}
<div class="page-header">
    <div class="row align-items-center">
        <div class="col">
            <h3 class="page-title">Avanslar</h3>
            <ul class="breadcrumb">
                <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Anasayfa</a></li>
                <li class="breadcrumb-item"><a asp-controller="EmployeeAdvance" asp-action="Index">Avanslar</a></li>
                <li class="breadcrumb-item active">Avans Detayları</li>
            </ul>
        </div>
    </div>
</div>
<div>
    <div class="card col-md-8">
        <div class="card-body px-3">

            <dl class="row">

                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.AdvancePrice)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.AdvancePrice)
                </dd>
                
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.CreatedDate)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.CreatedDate)
                </dd>

                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Reason)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Reason)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Description)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Description)
                </dd>
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.ReturnStatus)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.ReturnStatus)
                </dd>
            </dl>
            <div>
                <a class="btn btn-primary" asp-controller="EmployeeAdvance" asp-action="EditAdvancePayment" asp-route-id="@Model.Id"><i class="fa-solid fa-pencil m-r-5"></i>  Düzenle</a>
                <a class="btn btn-secondary" asp-action="Index"><i class="fa fa-arrow-left" aria-hidden="true"></i>  Geri Dön</a>

            </div>
        </div>
    </div>
</div>
