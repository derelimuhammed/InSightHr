@using MVC_ONION_PROJECT.PRESENTATION.IDENTITY.Areas.OrganizationAdmin.Models.EmployeeVms;
@model EmployeeDetailsVm;
@{
    Layout = "_Layout";
}
<div class="page-header">
    <div class="row align-items-center">
        <div class="col">
            <h3 class="page-title">Çalışanlar</h3>
            <ul class="breadcrumb">
                <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Anasayfa</a></li>
                <li class="breadcrumb-item"><a asp-controller="Employee" asp-action="Index">Çalışan Listesi </a></li>
                <li class="breadcrumb-item active">Çalışan Detayları</li>
            </ul>
        </div>
    </div>
</div>
<div>
    <div class="card col-md-8">
        <div class="card-body px-5">
            @{
                string encodedData = Convert.ToBase64String(Model?.Photo ?? new byte[0]);
            }
            <div class="profile-img mt-3 mb-3">
                    <img src="data:image/jpeg;base64,@(encodedData)" alt="User Image" class="avatar-xl">
            </div>
            <dl class="row">

                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Name)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Name)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Surname)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Surname)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.GenderStatus)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.GenderStatus)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Address)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Address)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.PhoneNumber)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.PhoneNumber)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.RecruitmentDate)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.RecruitmentDate)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.DepartmentName)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.DepartmentName)
                </dd>



            </dl>
            <div>
                <a class="btn btn-warning" asp-controller="Employee" asp-action="EditEmployee" asp-route-id="@Model?.Id"><i class="fa-solid fa-pencil m-r-5"></i>  Güncelle</a>

                <a class="btn btn btn-secondary" asp-action="Index"><i class="fa fa-arrow-left" aria-hidden="true"></i>  Geri Dön</a>

            </div>
        </div>
    </div>
</div>
