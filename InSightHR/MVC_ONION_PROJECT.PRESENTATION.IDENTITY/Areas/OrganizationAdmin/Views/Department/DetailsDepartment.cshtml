@using MVC_ONION_PROJECT.PRESENTATION.IDENTITY.Areas.OrganizationAdmin.Models.DepartmentVms;
@model DepartmentDetailsVm;
@{Layout="_Layout";}
<div class="page-header">
    <div class="row align-items-center">
        <div class="col">
            <h3 class="page-title">Departmanlar</h3>
            <ul class="breadcrumb">
                <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Anasayfa</a></li>
                <li class="breadcrumb-item"><a asp-controller="Department" asp-action="Index">Departman Listesi </a></li>
                <li class="breadcrumb-item active">Departman Detayları</li>
            </ul>
        </div>
    </div>
</div>
<div>
    <div class="card col-md-8">
        <div class="card-body px-3">

            <dl class="row">
               
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.DepartmentName)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.DepartmentName)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.OrganizationName)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.OrganizationName)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Description)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Description)
                </dd>
                


            </dl>
            <div>
                <a class="btn btn-warning" asp-controller="Department" asp-action="EditDepartment" asp-route-id="@Model.Id"><i class="fa-solid fa-pencil m-r-5"></i> Güncelle</a>

                <a class="btn btn-info" asp-action="Index"><i class="fa fa-arrow-left" aria-hidden="true"></i>  Geri Dön</a>

            </div>
        </div>
    </div>
</div>
